{% extends 'base.html.twig' %}

{% block body %}
	<h2 class="page-header">Latest todos</h2>
	<table class="table table-striped">
	 <thead>
	  <tr>
	   <th>#</th> 
	   <th>Todo</th> 
	   <th>Due date</th>
	   <th>View</th>
	   <th>Edit</th>
	   <th>Delete</th>
	  </tr>
	  </thead>
	  <tbody>
	  {% for todo in todos %}
	   <tr>
	    <th scope="row">{{todo.id}}</th> 
	    <td>{{todo.name}}</td> 
	    <td>{{todo.dueDate|date('F j, y, g:i:a')}}</td> 
	    <td><a href="/todo/details/{{todo.id}}" class="btn btn-default"><i class="fa fa-book"></i></a></td>
	    <td><a href="/todo/edit/{{todo.id}}" class="btn btn-default"><i class="fa fa-pencil"></i></a></td>
	    <td><a href="/todo/delete/{{todo.id}}" class="btn btn-default"><i class="fa fa-trash"></i></a></td> 
	   </tr>
	   {% endfor %}
	  </tbody> 
	 </table>
{% endblock %}